<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="#9DD1D8"
        android:paddingTop="@dimen/_5sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/btnBackToListBook"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp">

        </ImageView>
        <androidx.cardview.widget.CardView
            android:layout_below="@id/btnBackToListBook"
            android:id="@+id/cardBook"
            android:layout_marginTop="@dimen/_5sdp"
            android:elevation="@dimen/_100sdp"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_150sdp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imgBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textSize="@dimen/_20sdp"
            android:text="Hello"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_below="@id/btnBackToListBook"
            android:layout_toRightOf="@id/cardBook"
            android:id="@+id/tvBookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/tvAuthor"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@id/cardBook"
            android:layout_below="@id/tvBookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:id="@+id/layout3part"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/cardBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/tvComment"
                    android:text="500 bài đánh gái"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                </TextView>
            <TextView
                android:textAlignment="center"
                android:id="@+id/tvType"
                android:text="Sách giải trí"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            </TextView>
            <TextView
                android:textAlignment="center"
                android:id="@+id/tvNumberOfPage"
                android:text="51 trang"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            </TextView>
        </LinearLayout>
        <Button
            android:id="@+id/btnPrice"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/btn_add_cart"
            android:layout_below="@id/layout3part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Button>
    </RelativeLayout>
</layout>